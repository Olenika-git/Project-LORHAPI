@model IEnumerable<LORHAPI_Client.Models.Insertion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid p-0">
    @* Banner Image*@
    <div class="d-flex flex-nowrap MH100MQueries BannerMaxHeight">
        <img class="w-100" src="~/Images/banners/Jeune.jpg" />
    </div>
    
   @* Research Bar*@
    <div class="SearchBarPosition SearchBarPositionMobile searchWidth searchWidthMobile">
        <div id="custom-search-input w-100 glyphicon">
            <div class="input-group col-md-12">
                <input type="text" class="  search-query form-control" placeholder="Search" />
                <span class="input-group-btn">
                    <button class="btn btn-primary h-100" type="button">
                        <span class="glyphicon bi-search"></span>
                    </button>
                </span>
            </div>
        </div>
	</div>
</div>

@* Search Filter*@
<div class="container FilterSize justify-content-center">
    <div class="flex-column align-self-center">        
            @* Age *@
        <div class="d-flex flex-row justify-content-around">
            <div class="ContainerFilterSizing text-center">
                <p>Age</p>
                <div class="d-flex flex-row justify-content-center mw-50">
                    <input class="AgeValue text-center" type="text" id="fname" name="fname" value="0">
                </div>
            </div>
            @* Department *@
            <div class="ContainerFilterSizing text-center">
                <p>Département</p>
                <div class="btn-group dropright">
                  <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    00 - Département
                  </button>
                  <div class="dropdown-menu">
                      <a class="dropdown-item" href="#">01 - Chez Gilles</a>
                      <a class="dropdown-item" href="#">02 - Chez Gaetan</a>
                  </div>
                </div>
            </div>
            
        </div>
        <div class="d-flex flex-row justify-content-around">
            @* Activity Sector *@
            <div class="ContainerFilterSizing text-center">               
                <p>Secteur d'Activité</p>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Secteur
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Marketing</a>
                    <a class="dropdown-item" href="#">Finance</a>
                    <a class="dropdown-item" href="#">Maraudeur</a>
                    </div>
                </div>
            </div>
            @* Degree Required *@
            <div class="ContainerFilterSizing text-center">
                <p>Diplôme Requis</p>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Aucun Diplôme
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">CAP</a>
                    <a class="dropdown-item" href="#">BEP</a>
                    <a class="dropdown-item" href="#">BAC</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>    
</div>

<h1>Index</h1>
<p>
    <a asp-action="Privacy">Create New</a>
</p>
